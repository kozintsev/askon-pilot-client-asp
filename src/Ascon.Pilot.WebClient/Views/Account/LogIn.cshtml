@using System.Threading.Tasks
@using Ascon.Pilot.WebClient.ViewModels
@model LogInViewModel
@{
    ViewBag.Title = "Войти";
}

@using (Html.BeginForm("AltLogIn", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(x => x.DatabaseName, new {@class = "control-label col-sm-2"})
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.DatabaseName, new {@class = "form-control"})
            <p class="help-block">@Html.ValidationMessageFor(x => x.DatabaseName)</p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Login, new {@class = "control-label col-sm-2"})
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Login, new {@class = "form-control"})
            <p class="help-block">@Html.ValidationMessageFor(x => x.Login)</p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new {@class = "control-label col-sm-2"})
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
            <p class="help-block">@Html.ValidationMessageFor(x => x.Password)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </div>
}