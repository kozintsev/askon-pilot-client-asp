@using System.Threading.Tasks
@model IEnumerable<Ascon.Pilot.WebClient.ViewModels.FileViewModel>

<div>
    @if (Model == null || !Model.Any())
    {
        <p>файлы в папке отсутствуют</p>
    }
    else
    {
        foreach (var fileModel in Model)
        {
            <div class="col-sm-2">
                <div>
                    <a href="@Url.Action("Download", "Files", new {id = fileModel.Id, size = fileModel.Size})" class="thumbnail">
                        <img src="@Url.Content("~/images/file.png")" width="100" height="100" alt="@fileModel.Name"/>
                    </a>
                </div>
                <div>
                    <a href="@Url.Action("Download", "Files", new {id = fileModel.Id, size = fileModel.Size})">@fileModel.Name</a>
                </div>
            </div>
        }
    }
</div>